{% extends 'base.html.twig' %}

{% block title %}New Game{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1>Nouveau r√©sultat de partie</h1>

    {{ form_start(form) }}
        {# {{ form_widget(form) }} #}
        <div class="row mb-3">
            {{ form_label(form._scenario) }}
            {{ form_widget(form._scenario) }}
        </div>
        <div class="row">
            <div class="col-md-6 mb-3">
                <h5>Joueur 1</h5>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_label(form.player1._player) }}
                        {{ form_widget(form.player1._player) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.player1._faction) }}
                        {{ form_widget(form.player1._faction) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_label(form.gameResult.player1Result.objectivePoints) }}
                        {{ form_widget(form.gameResult.player1Result.objectivePoints) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.gameResult.player1Result.survivorPoints) }}
                        {{ form_widget(form.gameResult.player1Result.survivorPoints) }}
                    </div>
                </div>
            </div>

            <div class="col-md-6">
                <h5>Joueur 2</h5>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_label(form.player2._player) }}
                        {{ form_widget(form.player2._player) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.player2._faction) }}
                        {{ form_widget(form.player2._faction) }}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        {{ form_label(form.gameResult.player2Result.objectivePoints) }}
                        {{ form_widget(form.gameResult.player2Result.objectivePoints) }}
                    </div>
                    <div class="col-md-6">
                        {{ form_label(form.gameResult.player2Result.survivorPoints) }}
                        {{ form_widget(form.gameResult.player2Result.survivorPoints) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center gap-3 mt-4">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-success">Sauvegarder</button>
            <a href="{{ path('game_list') }}" class="btn btn-secondary">Retour</a>
        </div>
    {{ form_end(form, { render_rest: false }) }}
</div>
{% endblock %}
